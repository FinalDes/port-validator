{
  "name": "port-validator",
  "version": "1.0.0",
  "main": "dist/index",
  "typings": "lib/index",
  "repository": "git@github.com:FinalDes/port-validator.git",
  "author": "Alex Alonso <alex4551@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "test": "mocha --opts ./mocha.opts",
    "test:javascript": "mocha ./test/index.test.js",
    "test:coverage": "nyc yarn test",
    "test:coverage:showReport": "yarn test:coverage && open coverage/index.html",
    "test:coveralls": "yarn test:coverage | coveralls",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "chai": "^4.1.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "text-lcov",
      "json",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
