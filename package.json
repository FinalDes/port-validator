{
  "name": "port-validator",
  "version": "1.0.0",
  "main": "dist/index",
  "typings": "lib/index",
  "repository": "git@github.com:FinalDes/port-validator.git",
  "author": "Alex Alonso <alex4551@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config webpack.config.js --progress --profile --bail",
    "test": "mocha --opts ./mocha.opts",
    "test:es6": "mocha --opts ./mocha.es6.opts",
    "test:js": "mocha",
    "test:ts": "mocha --opts ./mocha.ts.opts",
    "test:coverage": "nyc yarn test",
    "test:coverage:showReport": "yarn test:coverage && open coverage/index.html",
    "test:coveralls": "yarn test:coverage | coveralls",
    "tslint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.3",
    "awesome-typescript-loader": "^5.2.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "coveralls": "^3.0.6",
    "mocha": "^5.0.0",
    "nyc": "^12.0.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "webpack": "^4.13.0",
    "webpack-cli": "^3.0.8"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "text-lcov",
      "json",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
